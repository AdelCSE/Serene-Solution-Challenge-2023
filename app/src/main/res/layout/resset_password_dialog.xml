<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/email_sent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Email has been sent!"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@color/PrimaryGreen"
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/instructions_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email_sent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Please check your inbox and click in the received link to reset your password."
        android:gravity="center_horizontal"
        android:fontFamily="@font/montserrat_medium"
        android:textSize="16sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/gotItButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/green_button"
        android:layout_below="@+id/instructions_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="32dp"
        android:text="Got it"
        android:textColor="@color/white"/>

</RelativeLayout>